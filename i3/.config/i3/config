# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

set $shutdown exec sh -c '[ $(echo "NO\nYES" | dmenu -i -p "Shutdown?") = "YES" ] && systemctl poweroff' 
set $reboot exec sh -c '[ $(echo "NO\nYES" | dmenu -i -p "Reboot?") = "YES" ] && systemctl reboot' 
set $exit exec sh -c '[ $(echo "NO\nYES" | dmenu -i -p "Logout?") = "YES" ] && i3-msg exit' 

# Lock the screen with a black background,
# and switch off screen after 300 seconds of inactivity
set $locki3 exec i3lock \
                      --ignore-empty-password \
                      --show-failed-attempts \
                      --dpms --inactivity-timeout 300 \
                      --color 000000

bindsym Control+$alt+l $locki3
# shutdown, reboot, lock script
set $mode_system System (l) lock, (e) logout, (r) reboot, (s) shutdown
mode "$mode_system" {
    bindsym l $locki3, mode "default"
    bindsym e $exit, mode "default"
    bindsym r $reboot, mode "default"
    bindsym s $shutdown, mode "default"  
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym Control+$alt+Delete mode "$mode_system"
bindsym $mod+Escape mode "$mode_system"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will grow the window’s height.
        # Pressing down will shrink the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize shrink height 10 px or 10 ppt
        bindsym Up resize grow height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
        tray_output primary
}

# Keys
# Disable capslock and map it to toggle touchpad.
exec_always xmodmap -e "keysym Caps_Lock = "
bindcode 66 exec --no-startup-id ~/bin/toggle-touchpad

# Setup audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/bin/pulseaudio-volumectrl up
bindsym XF86AudioLowerVolume exec --no-startup-id ~/bin/pulseaudio-volumectrl down
bindsym XF86AudioMute exec --no-startup-id ~/bin/pulseaudio-volumectrl toggle-mute
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10 -steps 1 -time 0
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5 -steps 1 -time 0
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym --release Print exec scrot -e 'mkdir -p ~/Pictures/Screenshots && mv $f ~/Pictures/Screenshots'
bindsym --release $mod+Print exec scrot -s -e 'mkdir -p ~/Pictures/Screenshots && mv $f ~/Pictures/Screenshots'

bindsym XF86Display exec --no-startup-id ~/bin/refresh-outputs

# Startup applications

exec_always ~/bin/refresh-outputs
# Setup background. Runs feh --bg-fill <image>
# Automatically updated by feh when I choose a new image
exec_always ~/.fehbg
# Xflux, for my eyes
# Latlong 28,78 is roughly near Delhi.
exec --no-startup-id xflux -l 28 -g 78
# MPD and MPDRIS2 helper for MPD
exec --no-startup-id mpd
exec --no-startup-id mpDris2 &
exec --no-startup-id nm-applet &
# alt+tab to switch window, alt+` to run+ssh
exec --no-startup-id rofi -key-window mod1+Tab -key-run mod1+grave -fuzzy &
# Bunch everything requiring online connection here
exec --no-startup-id sh -c '[ $(echo "NO\nYES" | dmenu -i -p "Autostart online apps?") = "YES" ] && autostart-online-apps' 
exec_always notify-send "i3 at your service"
